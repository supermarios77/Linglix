// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User roles
enum Role {
  STUDENT
  TUTOR
  ADMIN
}

// Booking status
enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  REFUNDED
}

// Tutor approval status
enum TutorApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

// Appeal status
enum AppealStatus {
  PENDING
  APPROVED
  REJECTED
}

// User model - handles both students and tutors
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  password      String?   @db.Text // Hashed password for credentials provider (null for OAuth users)
  role          Role      @default(STUDENT)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Penalty tracking
  penaltyUntil DateTime? // If set, user is penalized (cannot book) until this date

  // Relations
  tutorProfile   TutorProfile?
  studentProfile StudentProfile?
  bookings       Booking[]            @relation("StudentBookings")
  reviews        Review[]
  accounts       Account[]
  authSessions   AuthSession[]
  appeals        CancellationAppeal[]

  @@index([email])
  @@index([role])
  @@index([penaltyUntil])
}

// Student profile - preferences and learning goals
model StudentProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  learningGoal      String? // e.g., "conversation", "business", "academic"
  currentLevel      String? // e.g., "beginner", "intermediate", "advanced"
  preferredSchedule String? // e.g., "morning", "afternoon", "evening", "flexible"
  motivation        String?  @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([learningGoal])
  @@index([currentLevel])
}

// Language proficiency levels
enum LanguageProficiency {
  NATIVE
  FLUENT
  ADVANCED
  INTERMEDIATE
  BASIC
}

// Tutor profile - additional info for tutors
model TutorProfile {
  id              String              @id @default(cuid())
  userId          String              @unique
  // Basic info
  introduction    String?             @db.Text // Short introduction
  aboutMe         String?             @db.Text // Detailed about me
  bio             String?             @db.Text // Legacy field, can be used for summary
  // Languages
  languagesKnown  Json? // Array of { language: string, proficiency: LanguageProficiency }
  languagesTaught String[] // Languages the tutor teaches
  // Teaching info
  specialties     String[] // e.g., ["Business English", "IELTS Prep"]
  teachingStyle   String?             @db.Text
  preferredLevels String[] // Student levels they prefer to teach: ["beginner", "intermediate", "advanced"]
  // Background
  interests       String[] // Tutor's interests
  industryFamiliarity String[] // e.g., ["science", "healthcare", "law", "business"]
  experience      String?             @db.Text // Experience and training (optional)
  workExperience  String?             @db.Text // Past work experience
  degrees         String?             @db.Text // Educational degrees
  // Pricing (fixed)
  hourlyRate      Float               @default(30) // Fixed at $30/hour, tutors get $15/hour after commission
  rating          Float               @default(0)
  totalSessions   Int                 @default(0)
  isActive        Boolean             @default(true)
  approvalStatus  TutorApprovalStatus @default(PENDING)
  rejectionReason String? // Admin can provide reason for rejection
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  // Relations
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings     Booking[]
  availability Availability[]

  @@index([userId])
  @@index([isActive])
  @@index([approvalStatus])
}

// Tutor availability - weekly schedule
model Availability {
  id        String   @id @default(cuid())
  tutorId   String
  dayOfWeek Int // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
  startTime String // Format: "HH:mm" (e.g., "09:00")
  endTime   String // Format: "HH:mm" (e.g., "17:00")
  timezone  String   @default("UTC")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tutor TutorProfile @relation(fields: [tutorId], references: [id], onDelete: Cascade)

  @@index([tutorId])
  @@index([dayOfWeek])
}

// Bookings - scheduled sessions
model Booking {
  id                 String        @id @default(cuid())
  studentId          String
  tutorId            String
  scheduledAt        DateTime
  duration           Int // Duration in minutes (30, 60, 90)
  status             BookingStatus @default(PENDING)
  price              Float
  paymentId          String? // Stripe payment intent ID
  notes              String? // Student notes/requirements
  callId             String? // Stream call ID: "booking-{bookingId}"
  callStartedAt      DateTime? // When call actually started
  callEndedAt        DateTime? // When call ended
  cancelledAt        DateTime? // When booking was cancelled
  cancelledBy        String? // User ID who cancelled (studentId or tutor userId)
  isLateCancellation Boolean       @default(false) // True if cancelled less than 12 hours before
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  // Relations
  student User         @relation("StudentBookings", fields: [studentId], references: [id], onDelete: Cascade)
  tutor   TutorProfile @relation(fields: [tutorId], references: [id], onDelete: Cascade)
  review  Review?

  @@index([studentId])
  @@index([tutorId])
  @@index([scheduledAt])
  @@index([status])
  @@index([callId])
}

// Reviews - student reviews of tutors
model Review {
  id        String   @id @default(cuid())
  bookingId String   @unique
  studentId String
  tutorId   String
  rating    Int // 1-5 stars
  comment   String?
  tags      String[] // e.g., ["patient", "engaging", "clear"]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  student User    @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([tutorId])
  @@index([rating])
  @@index([createdAt])
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session model
model AuthSession {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Cancellation Appeal - allows students to appeal penalties
model CancellationAppeal {
  id         String       @id @default(cuid())
  userId     String // Student who is appealing
  bookingId  String? // Optional: specific booking being appealed
  reason     String       @db.Text // Student's explanation
  status     AppealStatus @default(PENDING)
  adminNotes String?      @db.Text // Admin's notes/decision
  reviewedBy String? // Admin user ID who reviewed
  reviewedAt DateTime?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}
